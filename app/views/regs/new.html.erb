 <%= render "shared/error", obj: @reg %>
 <%= form_with model: @reg do |f| %>
 


    <h3>新規投稿</h3>
 
 <%= form_with model: @reg do |f| %>
   <table>
	   <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
 
     <tr>
       <th><%= f.label :start_date ,"開始日" %></th>
       <td><%= f.date_field :start_date %></td>
     </tr>
 
     <tr>
       <th><%= f.label :finish_date ,"終了日" %></th>
       <td><%= f.date_field :finish_date %></td>
     </tr>

     <tr>
       <th><%= f.label :content, "投稿内容" %></th>
       <td><%= f.text_area :content, class:"posts-content" %></td>
     </tr>
   </table>
   <%= f.hidden_field :post_id, value: @reg.id %>
   <div>
     <ul>
       <li><%= f.submit "投稿を完了する"%></li>
			 <li><%= link_to "投稿一覧に戻る", :regs %></li>
     </ul>
   </div>
 <% end %>
<% end %>